<div class="searchContextualPopup">

	<TextEdit Text="@SearchText" TextChanged="OnSearchTextChanged" ChangeTextOnKeyPress="true" DelayTextOnKeyPressInterval="100" DelayTextOnKeyPress="true" @onclick:stopPropagation Style="width:160px"></TextEdit>

	<div class="searchResults">
		<Dropdown Visible="true">
			<DropdownMenu>
				@foreach (var result in Results)
				{
					<DropdownItem Clicked="() => OnSearchResultClicked(result)">@result.DisplayName</DropdownItem>
				}
			</DropdownMenu>
		</Dropdown>

	</div>

</div>

