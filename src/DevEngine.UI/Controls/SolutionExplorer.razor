
<div class="solutionExplorer">

    <div style="height: 100%; width: 100%" @oncontextmenu="OnSolutionExplorerRightClick" @oncontextmenu:preventDefault>
        <TreeView TNode="SolutionExplorerTreeViewItem" Nodes="Items" GetChildNodes="@(item => item.Children)" HasChildNodes="@(item => item.Children?.Any() == true)" 
            SelectedNodeChanged="OnSelectedTreeViewItemChanged" @bind-ExpandedNodes="ExpandedTreeViewItems">

            <NodeContent>

                @if (context.IsRenaming)
                {
                    <TextEdit Placeholder="NewItem" Text="@context.Name" TextChanged="@(newValue => OnTreeViewItemRenamed(context, newValue))" ChangeTextOnKeyPress="false" Autofocus="true" Plaintext="true"></TextEdit>
                }
                else
                {
                    <Icon Name="@(context.Type == TreeViewItemType.Folder ? "fas fa-folder" : "fas fa-file-code")"></Icon>
                    @context.Name
                }

            </NodeContent>

        </TreeView>
    </div>

</div>
